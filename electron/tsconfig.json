{
	"compilerOptions": {
		"target": "ES6",
		"strict": true,
		"sourceMap": true,
		"lib": ["dom", "dom.iterable", "esnext", "es2019"],
		"module": "commonjs",
		"moduleResolution": "node",
		"skipLibCheck": true,
		"outDir": "../build",
		"rootDir": "../",
		"noEmitOnError": true,
		"strictNullChecks": false,
		"esModuleInterop": true,
		"typeRoots": ["node_modules/@types"]
	}
}
